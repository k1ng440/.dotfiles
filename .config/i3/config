# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $alt Mod1

set $monitor_primary "DP-0"
set $monitor_left "DP-2"
set $monitor_top "HDMI-1"

font pango:Ubuntu Mono 14

client.focused          #002b36 #586e75 #fdf6e3 #268bd2
client.focused_inactive #002b36 #073642 #839496 #073642
client.unfocused        #002b36 #073642 #839496 #073642
client.urgent           #002b36 #dc322f #fdf6e3 #002b36

bar {
    status_command i3status
	i3bar_command i3bar --transparency
	tray_output none
    position bottom
    status_command i3status
    tray_output primary
    mode dock
    modifier Control
    separator_symbol " | "
    tray_padding 4
    font pango:MesloLGS NF 12
    strip_workspace_numbers yes
    colors {
        background #002b36
        statusline #839496
        separator  #586e75
        focused_workspace  #b58900 #b58900 #002b36
        active_workspace   #586e75 #586e75 #002b36
        inactive_workspace #073642 #002b36 #839496
        urgent_workspace   #dc322f #dc322f #fdf6e3
    }
}

exec_always --no-startup-id feh --bg-scale --randomize ~/Pictures/wl

exec_always --no-startup-id xrandr --dpi 96 \
    --output DP-0 --primary --mode 3440x1440 --rate 100.00 --scale 1x1 \
    --output DP-2           --mode 3440x1440 --rate 60.00 --left-of DP-0 --scale 1x1 \
    --output HDMI-0         --mode 3840x2160 --rate 60.00 --above DP-0 --scale 1x1

exec_always exec picom -f
exec_always dunst -config ~/.config/dunst/dunstrc
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-appleth
exec_always --no-startup-id ~/.local/bin/remaps

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


# Launch Applications
# Press $mod+o followed by either f, t, Escape or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $mode_launcher Launch: [t]hunar [f]irefox [c]rome thunder[b]ird tv[h]dmi [s]potify [w]allpaper
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox, mode "default"
    bindsym b exec thunderbird, mode "default
    bindsym c exec google-chrome, mode "default"
    bindsym h exec ~/.local/bin/tvhdmi, mode "default"
    bindsym s exec spotify, mode "default"
    bindsym t exec thunar, mode "default"
    bindsym w exec --no-startup-id feh --bg-scale --randomize ~/Pictures/wl

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+r mode "default"
}

# grave
bindsym $mod+grave scratchpad show
bindsym $mod+Shift+grave move scratchpad

bindsym $mod+b exec --no-startup-id brave
bindsym $mod+$Alt+f exec --no-startup-id firefox

# Screenshot
bindsym --release Print exec --no-startup-id ~/.local/bin/screenshot -c
bindsym --release Shift+Print exec --no-startup-id ~/.local/bin/screenshot -c -u

# Use Mouse+$mod to drag floating windows to their wanted position
mouse_warping none
focus_follows_mouse no
focus_on_window_activation smart
floating_modifier $mod

# tiling_drag modifier titlebar
bindsym button2 kill
bindsym button3 floating toggle, resize set 50 ppt 80 ppt, resize shrink down 20 px, move position center
bindsym --whole-window $mod+button3 floating toggle, resize set 50 ppt 80 ppt, resize shrink down 20 px, move position center
bindsym button9 move left
bindsym button8 move right

# start a terminal
bindsym $mod+Return exec ~/.local/bin/kitty

# kill focused window
bindsym $mod+q kill
bindsym $mod+Shift+q kill -9

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -show drun -run-shell-command '{terminal} -e zsh -ic "{cmd} && read"'
bindsym $mod+space exec --no-startup-id rofi -show drun -run-shell-command '{terminal} -e zsh -ic "{cmd} && read"'

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindcode $mod+Shift+v split h
bindcode $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle, resize set 50 ppt 80 ppt, resize shrink down 20 px, move position center

# change focus between tiling / floating windows
bindsym $mod+t focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

workspace $ws1 output $monitor_primary
workspace $ws2 output $monitor_primary
workspace $ws3 output $monitor_primary
workspace $ws4 output $monitor_left
workspace $ws5 output $monitor_top

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Exit menu
bindsym $mod+Shift+e exec i3-nagbar -f "pango:Ubuntu Mono 14" \
    -m "Exit i3? This will end your current X session." \
    -B "Exit now" "i3-msg exit" \
    -B "Suspend" "systemctl suspend && pkill i3-nagbar" \
    -B "Reboot" "systemctl reboot" \
    -B "Power off" "systemctl poweroff" \

mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

popup_during_fullscreen smart
for_window [window_type="normal"] border normal
for_window [window_role="About"] floating enable
for_window [window_role="Organizer"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="page-info"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="toolbox"] floating enable
for_window [window_role="webconsole"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="Dunst"] floating enable
for_window [title="Upload image$"] floating enable
for_window [title="Message Filters$"] floating enable
for_window [all] title_window_icon on
for_window [all] title_window_icon padding 3px
for_window [class="thunderbird$" title="^Write\:"] floating enable

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

# Scratchpad
for_window [class="Spotify"] floating toggle, move to scratchpad

# assign application to a workspace
for_window [class="thunderbird"] move container to workspace 3
for_window [class="discord"] move container to workspace 2
for_window [class="Skype"] move container to workspace 2
for_window [class="Whatsapp-for-linux"] move container to workspace 2

